<!-- Begin Page Content -->
<div class="modal fade show d-flex align-items-center justify-content-center" id="loaderModal" tabindex="-1"
    role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row ms-auto">
        <div class='ml-3 mr-2 mt-4 mb-4 m-1 bg-image'></div>
        <div class='m-1 mt-4 mb-4 bg-sbc-image'></div>
    </div>


    <!-- Page Heading -->
    <h1 class="h4 mb-2 text-gray-800">FERRAMENTA PARA EXTRAÇÃO DE DADOS DA BIBLIOTECA DIGITAL DA SOCIEDADE BRASILEIRA DE COMPUTAÇÃO</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow">
        <div class="row ms-auto mb-4 mt-4 m-2">
            <form id="target" class='user col-12' action='/' method='post'>
                <div class="row">
                    <div class='form-group col-12'>
                        <input type='string' class='form-control form-control-user' id='inputWord'
                            aria-describedby='searchWord' name='searchWord'
                            placeholder='Pesquise aqui suas palavras chaves...' value="{{searchWord}}" required />
                    </div>
                </div>

                <button onclick="showLoading()" id="submit" type='submit'
                    class='col-sm-4 btn btn-primary btn-user btn-block'>
                    Pesquisar
                </button>
            </form>
        </div>

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Clique no título da coluna para ordenar</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <div class="d-flex justify-content-end">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffffff"
                                class="bi bi-save" viewBox="0 0 16 16">
                                <path
                                    d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                            </svg>
                            Exportar
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" onclick="tableExport('csv')">CSV</a>
                            <a class="dropdown-item" onclick="tableExport('excel')">Excel</a>
                            <a class="dropdown-item" onclick="tableExport('pdf')">PDF</a>
                            <a class="dropdown-item" onclick="tableExport('doc')">DOC</a>
                            <a class="dropdown-item" onclick="tableExport('txt')">TXT</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" onclick="tableExport('json')">JSON</a>
                            <a class="dropdown-item" onclick="tableExport('xml')">XML</a>
                        </div>
                    </div>
                </div>

                <table class="table table-bordered" style="overflow-y: auto;" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Ano</th>
                            <th>Resumo</th>
                            <th>Autores</th>
                            <th>Publicado em:</th>
                            <th>Tipo</th>
                            <th>DOI</th>
                            <th>PDF</th>
                            <th>Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results}}
                        <tr>
                            <td><a href="{{this.url}}" target="_blank">{{this.title}}</a></td>
                            <td>{{this.year}}</td>
                            <td>{{this.authors}}</td>
                            <td><div style="width:300px; height:300px; overflow:auto">{{this.abstract}}</div></td>
                            <td>{{this.publicated}}</td>
                            <td>{{this.type}}</td>
                            <td><a href="{{this.DOI}}" target="_blank">DOI</a></td>
                            <td><a href="{{this.PDF}}" target="_blank">PDF</a></td>
                            <td><a href="{{this.url}}" target="_blank">Link</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @media (max-width: 978px) {
    .container, .container-fluid {
      padding:0;
      margin:0;
    }

    body {
      padding:0;
    }

    .navbar-fixed-top, .navbar-fixed-bottom, .navbar-static-top {
      margin-left: 0;
      margin-right: 0;
      margin-bottom:0;
    }
    .h4 {
        font-size: 1rem;
        padding: 0.5em;
    }
}
</style>